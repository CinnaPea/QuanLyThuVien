@model List<Sach>

<h2>Giỏ mượn</h2>

@if (TempData["ok"] != null)
{
     <div style="color:green">@TempData["ok"]</div>
}
@if (TempData["err"] != null)
{
     <div style="color:red">@TempData["err"]</div>
}

@if (!Model.Any())
{
    <p>Giỏ trống.</p>
}
else
{
    <table border="1" cellpadding="6">
        <tr><th>Mã sách</th><th>Đầu sách</th><th></th></tr>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SachId</td>
                <td>@s.DauSach?.TieuDe</td>
                <td>
                    <form method="post" asp-action="Remove">
                        <input type="hidden" name="sachId" value="@s.SachId" />
                        <button type="submit">Bỏ</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    <form method="post" asp-action="CreatePhieuMuonOnline">
        <div>
            <label>Ghi chú</label>
            <input name="ghiChu" />
        </div>
        <button type="submit">Tạo phiếu mượn online</button>
    </form>
}
