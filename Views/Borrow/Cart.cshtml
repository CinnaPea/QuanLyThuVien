@model WebApplication1.VMs.BorrowCartVM
@{
    ViewData["Title"] = "Giỏ mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/library-home.css" />

<div class="container cart-wrap">
    <div class="cart-header">
        <h3>🧺 Giỏ mượn sách</h3>
        <p class="muted">
            Chọn đầu sách, điều chỉnh số lượng và lập phiếu mượn
        </p>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert danger">@TempData["Error"]</div>
    }

    @if (Model.Items.Count == 0)
    {
        <div class="empty-box">
            <h5>📭 Giỏ mượn đang trống</h5>
            <p class="muted">Hãy chọn sách để bắt đầu mượn.</p>
            <a class="btn primary" asp-controller="Book" asp-action="Index">
                📚 Xem danh sách sách
            </a>
        </div>
    }
    else
    {
        <div class="card cart-card">
            <table class="cart-table">
                <thead>
                    <tr>
                        <th>✓</th>
                        <th>Đầu sách</th>
                        <th>Thể loại</th>
                        <th>NXB</th>
                        <th>Còn mượn</th>
                        <th>Số lượng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var it in Model.Items)
                    {
                        var disablePlus = it.Qty >= it.Available;
                        var disableMinus = it.Qty <= 1;

                        <tr>
                            <td class="center">
                                <form asp-controller="Borrow" asp-action="ToggleSelect" method="post">
                                    <input type="hidden" name="dauSachId" value="@it.DauSachId" />
                                    <input type="hidden" name="selected" value="@(it.Selected ? "false" : "true")" />
                                    <input type="checkbox" @(it.Selected ? "checked" : "") onchange="this.form.submit()" />
                                </form>
                            </td>

                            <td>
                                <div class="book-title">@it.TieuDe</div>
                            </td>

                            <td>@(it.TheLoai ?? "-")</td>
                            <td>@(it.NXB ?? "-")</td>

                            <td class="center">
                                <span class="pill">@it.Available</span>
                            </td>

                            <td class="center">
                                <div class="qty-box">
                                    <form asp-controller="Borrow" asp-action="Minus" method="post">
                                        <input type="hidden" name="dauSachId" value="@it.DauSachId" />
                                        <button class="qty-btn minus"
                                                type="submit"
                                        @(disableMinus ? "disabled" : "")>
                                            −
                                        </button>
                                    </form>

                                    <span class="qty-num">@it.Qty</span>
                              


                                    <form asp-controller="Borrow" asp-action="Plus" method="post">
                                        <input type="hidden" name="dauSachId" value="@it.DauSachId" />
                                        <button class="qty-btn plus"
                                                type="submit"
                                        @(disablePlus ? "disabled" : "")>
                                            +
                                        </button>
                                    </form>
                                </div>
                            </td>

                            <td class="right">
                                <form asp-controller="Borrow" asp-action="Remove" method="post">
                                    <input type="hidden" name="dauSachId" value="@it.DauSachId" />
                                    <button class="btn-delete" type="submit" title="Xóa sách khỏi giỏ">
                                        🗑
                                    </button>

                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="cart-footer">
                <div class="total">
                    📦 Tổng số lượng đã chọn:
                    <b>@Model.TotalSelectedQty</b>
                </div>

                <div class="actions">
                    <form asp-controller="Borrow" asp-action="Clear" method="post">
                        <button class="btn">Xóa giỏ</button>
                    </form>

                    <form asp-controller="Borrow" asp-action="CreateBorrowSlip" method="post">
                        <button class="btn primary">🧾 Lập phiếu mượn</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .cart-wrap {
        margin-top: 24px;
        max-width: 1200px;
    }

    .cart-header h3 {
        margin-bottom: 4px;
    }

    .muted {
        opacity: .7;
        font-size: 14px;
    }

    .alert {
        padding: 12px 14px;
        border-radius: 12px;
        margin-bottom: 12px;
    }

        .alert.success {
            background: rgba(16,185,129,.15);
            border: 1px solid rgba(16,185,129,.3);
        }

        .alert.danger {
            background: rgba(239,68,68,.15);
            border: 1px solid rgba(239,68,68,.3);
        }

    .empty-box {
        text-align: center;
        padding: 40px;
        border-radius: 16px;
        background: rgba(255,255,255,.03);
    }

    .cart-card {
        border-radius: 18px;
        overflow: hidden;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
    }

        .cart-table th {
            background: rgba(255,255,255,.04);
            font-weight: 600;
            font-size: 14px;
        }

        .cart-table th,
        .cart-table td {
            padding: 14px 12px;
            border-bottom: 1px solid rgba(255,255,255,.08);
        }

    .book-title {
        font-weight: 600;
    }

    .center {
        text-align: center;
    }

    .right {
        text-align: right;
    }

    .pill {
        padding: 4px 10px;
        border-radius: 999px;
        background: rgba(59,130,246,.15);
        font-size: 13px;
    }

    /* ===== SỐ LƯỢNG ===== */
    .qty-box {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .qty-btn {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        border: none;
        font-size: 18px;
        font-weight: 700;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all .15s ease;
    }

        .qty-btn.minus {
            background: rgba(249,115,22,.15);
            color: #f97316;
        }

            .qty-btn.minus:hover:not(:disabled) {
                background: #f97316;
                color: #fff;
            }

        .qty-btn.plus {
            background: rgba(34,197,94,.18);
            color: #22c55e;
        }

            .qty-btn.plus:hover:not(:disabled) {
                background: #22c55e;
                color: #fff;
            }

        .qty-btn:disabled {
            opacity: .35;
            cursor: not-allowed;
        }

    .qty-num {
        min-width: 30px;
        text-align: center;
        font-weight: 700;
        font-size: 15px;
    }

    /* ===== FOOTER ===== */
    .cart-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        background: rgba(255,255,255,.03);
    }

    .actions {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 14px;
        border-radius: 10px;
    }

        .btn.primary {
            background: #22c55e;
            color: #fff;
        }

        .btn.danger-outline {
            border: 1px solid #ef4444;
            color: #ef4444;
            background: transparent;
        }

    .btn-delete {
        width: 38px;
        height: 38px;
        border-radius: 12px;
        border: 1px solid rgba(239,68,68,.35);
        background: rgba(239,68,68,.12);
        color: #ef4444;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        cursor: pointer;
        transition: all .2s ease;
    }

        .btn-delete:hover {
            background: #ef4444;
            color: #fff;
            box-shadow: 0 6px 16px rgba(239,68,68,.35);
            transform: translateY(-1px);
        }

        .btn-delete:active {
            transform: scale(.95);
        }

</style>
