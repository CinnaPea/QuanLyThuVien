@using System
@{
    var username = Context.Session.GetString("USERNAME");
    var role = Context.Session.GetString("ROLE");
    bool isLoggedIn = !string.IsNullOrEmpty(username);
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Online</title>
    <link rel="stylesheet" href="~/css/library-home.css" asp-append-version="true" />
</head>
<body>

    <header class="topbar">
        <div class="topbar-inner container">

            <!-- LEFT -->
            <a class="topbar-brand" asp-controller="Home" asp-action="Index">
                <div class="topbar-logo">LB</div>
                <div class="topbar-brandtext">
                    <b>Library Online</b>
                    <small>Tra cứu & mượn sách</small>
                </div>
            </a>

            <!-- CENTER MENU -->
            <nav class="topbar-menu">
                <a class="topbar-btn" asp-controller="Book" asp-action="Index">📚 Sách</a>

                <a class="topbar-btn" asp-controller="Borrow" asp-action="Cart">
                    🧺 Giỏ mượn
                    @{
                        var cartCount = Context.Session.GetInt32("CART_COUNT") ?? 0;
                    }
                    @if (cartCount > 0)
                    {
                        <span class="topbar-badge">@cartCount</span>
                    }
                </a>

                @if (isLoggedIn)
                {
                    <a class="topbar-btn" asp-controller="UserBorrow" asp-action="Index">📄 Phiếu mượn</a>
                    <a class="topbar-btn" asp-controller="UserReturn" asp-action="Index">📦 Phiếu trả</a>
                    <a class="topbar-btn" asp-controller="UserFine" asp-action="Index">💰 Phiếu phạt</a>
                }
            </nav>

            <!-- RIGHT -->
            <div class="topbar-right">
                @if (isLoggedIn)
                {
                    <div class="topbar-user">👤 @username </div>

                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="topbar-btn danger">Logout</button>
                    </form>
                }
                else
                {
                    <a class="topbar-btn primary" asp-controller="Account" asp-action="Login">🔐 Đăng nhập</a>
                }
            </div>

        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-inner container">
            <div class="footer-col">
                <h4>📚 Library Online</h4>
                <p>Tra cứu, tạo giỏ mượn và lập phiếu mượn online nhanh chóng.</p>
            </div>

            <div class="footer-col">
                <h4>Liên kết</h4>
                <a asp-controller="Home" asp-action="Index">Trang chủ</a>
                <a asp-controller="Book" asp-action="Index">Danh sách sách</a>
                <a asp-controller="Borrow" asp-action="Cart">Giỏ mượn</a>
            </div>

            <div class="footer-col">
                <h4>Liên hệ</h4>
                <p>🏫 Thư viện trường</p>
                <p>📞 0123 456 789</p>
                <p>📧 library@school.edu.vn</p>
            </div>
        </div>

        <div class="footer-bottom">
            © @DateTime.Now.Year - Library Online | All rights reserved
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
