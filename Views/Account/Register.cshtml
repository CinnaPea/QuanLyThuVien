@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/library-register.css" />
</head>
<body>
    <div class="bg"><div class="pattern"></div></div>

    <div class="wrap">
        <div class="shell">
            <div class="panel">
                <div class="cover"></div>
                <div class="content">
                    <div class="brand">
                        <div class="mark">LB</div>
                        <div>
                            <b>Library Online</b><br />
                            <small style="color:rgba(229,231,235,.75)">Tạo tài khoản để mượn sách online</small>
                        </div>
                    </div>
                    <h1 style="color: aliceblue">Tạo tài khoản mới</h1>
                    <p>Điền thông tin và bắt đầu mượn sách nhanh chóng.</p>
                </div>
            </div>

            <div class="card">
                <div class="title">Đăng ký</div>
                <div class="subtitle">Hệ thống quản lý thư viện</div>

                @if (ViewBag.Error != null)
                {
                    <div class="error">@ViewBag.Error</div>
                }

                <form method="post" autocomplete="on">
                    <div class="group">
                        <label>Tên đăng nhập</label>
                        <div class="field">
                            <span class="icon">👤</span>
                            <input name="tenDangNhap" placeholder="username..." required />
                        </div>
                    </div>

                    <div class="grid">
                        <div class="group">
                            <label>Mật khẩu</label>
                            <div class="field">
                                <span class="icon">🔒</span>
                                <input name="matKhau" type="password" placeholder="mật khẩu..." required />
                            </div>
                        </div>

                        <div class="group">
                            <label>Xác nhận mật khẩu</label>
                            <div class="field">
                                <span class="icon">✅</span>
                                <input name="xacNhanMatKhau" type="password" placeholder="nhập lại..." required />
                            </div>
                        </div>
                    </div>

                    <div class="group">
                        <label>Họ tên</label>
                        <div class="field">
                            <span class="icon">🪪</span>
                            <input name="hoTen" placeholder="Nguyễn Văn A..." required />
                        </div>
                    </div>

                    <div class="grid">
                        <div class="group">
                            <label>Email</label>
                            <div class="field">
                                <span class="icon">✉️</span>
                                <input name="email" type="email" placeholder="abc@gmail.com" />
                            </div>
                        </div>
                        <div class="group">
                            <label>Điện thoại</label>
                            <div class="field">
                                <span class="icon">📞</span>
                                <input name="dienThoai" placeholder="09..." />
                            </div>
                        </div>
                    </div>

                    <div class="group">
                        <label>Địa chỉ</label>
                        <div class="field">
                            <span class="icon">📍</span>
                            <input name="diaChi" placeholder="Số nhà, đường, phường..." />
                        </div>
                    </div>

                    <div class="row">
                        <a asp-controller="Account" asp-action="Login">← Đã có tài khoản? Đăng nhập</a>
                        <a asp-controller="Home" asp-action="Index">Về trang chủ</a>
                    </div>

                    <button class="btn" type="submit">✨ Tạo tài khoản</button>
                </form>

                <div class="foot">© Thư viện online 2026</div>
            </div>
        </div>
    </div>
</body>
</html>
