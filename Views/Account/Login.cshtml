@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/library-login.css" />
</head>

<body>
    <div class="bg">
        <div class="pattern"></div>
        <div class="blob b1"></div>
        <div class="blob b2"></div>
        <div class="blob b3"></div>
    </div>

    <div class="wrap">
        <div class="shell">

            <!-- Left: library concept panel -->
            <div class="panel">
                <div class="cover"></div>
                <div class="content">
                    <div class="brand">
                        <div class="mark">LB</div>
                        <div>
                            <b>Library Online</b>
                            <small>Tra cứu & mượn sách nhanh</small>
                        </div>
                    </div>

                    <h1 style="color: aliceblue">Chào mừng bạn quay lại</h1>
                    <p>Đăng nhập để xem giỏ mượn, lập phiếu mượn online và theo dõi tình trạng phiếu.</p>

                </div>
            </div>

            <!-- Right: login form -->
            <div class="card">
                <div class="title">Đăng nhập</div>
                <div class="subtitle">Hệ thống quản lý thư viện</div>

                @if (ViewBag.Error != null)
                {
                    <div class="error">@ViewBag.Error</div>
                }

                <form method="post" autocomplete="on">
                    <div class="group">
                        <label>Tên đăng nhập</label>
                        <div class="field">
                            <span class="icon">👤</span>
                            <input name="tenDangNhap" placeholder="Nhập username..." required />
                        </div>
                    </div>

                    <div class="group">
                        <label>Mật khẩu</label>
                        <div class="field">
                            <span class="icon">🔒</span>
                            <input name="matKhau" type="password" placeholder="Nhập mật khẩu..." required />
                        </div>
                    </div>

                    <div class="row">
                        <span style="color:rgba(229,231,235,.6);font-size:13px;">Bảo mật tài khoản của bạn</span>
                        <a asp-controller="Home" asp-action="Index">← Về trang chủ</a>
                    </div>

                    <button class="btn" type="submit">🚀 Đăng nhập</button>
                    <div style="margin-top:10px; text-align:center;">
                        <a asp-controller="Account" asp-action="Register" style="color:#38bdf8;text-decoration:none;">
                            📝 Chưa có tài khoản? Đăng ký
                        </a>
                    </div>

                </form>

                <div class="foot">© Thư viện online 2026</div>
            </div>

        </div>
    </div>
</body>
</html>
