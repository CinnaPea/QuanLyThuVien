@model List<WebApplication1.Models.DauSach>
<h2>Đầu sách</h2>

<p><a asp-action="Create">Thêm đầu sách</a></p>

<table border="1" cellpadding="6">
    <tr>
        <th>ID</th>
        <th>Tiêu đề</th>
        <th>ISBN</th>
        <th>Năm XB</th>
        <th>Ngôn ngữ</th>
        <th>Thể loại</th>
        <th>NXB</th>
        <th></th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.DauSachId</td>
            <td>@x.TieuDe</td>
            <td>@x.Isbn</td>
            <td>@x.NamXuatBan</td>
            <td>@x.NgonNgu</td>
            <td>@x.TheLoai?.TenTheLoai</td>
            <td>@x.NhaXuatBan?.TenNxb</td>
            <td>
                <a asp-action="Edit" asp-route-id="@x.DauSachId">Sửa</a>
                <form asp-action="Delete" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@x.DauSachId" />
                    <button type="submit">Xoá</button>
                </form>
            </td>
        </tr>
    }
</table>
