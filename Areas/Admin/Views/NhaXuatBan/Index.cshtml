@model List<WebApplication1.Models.NhaXuatBan>

@{
    ViewData["Title"] = "Nhà xuất bản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-page {
        margin-top: 10px;
    }

    .admin-page-head {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 14px;
        flex-wrap: wrap;
    }

    .admin-title {
        margin: 0 0 6px 0;
        font-weight: 800;
        letter-spacing: .2px;
    }

    .admin-sub {
        margin: 0;
        color: rgba(0,0,0,.55);
    }

    .admin-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,.06);
        border-radius: 16px;
        box-shadow: 0 16px 40px rgba(0,0,0,.08);
        padding: 10px 12px;
    }

    .admin-table thead th {
        vertical-align: middle;
        font-weight: 800;
    }

    .admin-table td {
        vertical-align: middle;
    }

    .admin-btn {
        border-radius: 10px;
        padding: 10px 14px;
        font-weight: 600;
    }

    .admin-btn__icon {
        display: inline-block;
        margin-right: 6px;
        font-weight: 900;
        transform: translateY(-1px);
    }
</style>
<div class="admin-page">
    <div class="admin-page-head">
        <div>
            <h2 class="admin-title">🏢 Nhà xuất bản</h2>
            <p class="admin-sub">Quản trị danh mục NXB trong hệ thống.</p>
        </div>

        <div class="admin-actions">
            <a asp-action="Create" class="btn btn-primary">
                + Thêm NXB
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" style="border-radius:12px;">
            Chưa có nhà xuất bản nào. Bấm <b>Thêm NXB</b> để khởi tạo dữ liệu.
        </div>
    }
    else
    {
        <div class="admin-card">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover admin-table">
                    <thead>
                        <tr>
                            <th style="width:90px;">ID</th>
                            <th>Tên NXB</th>
                            <th>Địa chỉ</th>
                            <th style="width:160px;">Điện thoại</th>
                            <th style="width:180px;">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>
                                    <span class="label label-default">#@x.NhaXuatBanId</span>
                                </td>
                                <td>
                                    <strong>@x.TenNxb</strong>
                                </td>
                                <td>@x.DiaChi</td>
                                <td>@x.DienThoai</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a asp-action="Edit" asp-route-id="@x.NhaXuatBanId"
                                           class="btn btn-info btn-sm">
                                            Sửa
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@x.NhaXuatBanId"
                                              method="post" style="display:inline"
                                              onsubmit="return confirm('Xoá NXB này? Hành động không thể hoàn tác.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                Xoá
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>