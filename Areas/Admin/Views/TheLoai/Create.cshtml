@model WebApplication1.Models.TheLoai

@{
    ViewData["Title"] = "Thêm thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/CRUD.css" />
</head>
<body>
    <div class="admin-page">
        <div class="admin-page-head">
            <div>
                <h2 class="admin-title">📚 Thêm thể loại</h2>
                <p class="admin-sub">Tạo mới thể loại để phân loại đầu sách.</p>
            </div>

            <div class="admin-actions">
                <a asp-action="Index" class="btn btn-default">← Quay lại</a>
            </div>
        </div>

        <div class="admin-card admin-form-card">
            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger admin-valsum"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group admin-fg">
                            <label class="control-label">Tên thể loại</label>
                            <input asp-for="TenTheLoai" class="form-control" placeholder="VD: Khoa học, Văn học..." />
                            <span asp-validation-for="TenTheLoai" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group admin-fg">
                            <label class="control-label">Mô tả</label>
                            <textarea asp-for="MoTa" rows="4" class="form-control"
                                      placeholder="Mô tả ngắn (tuỳ chọn)"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="admin-form-actions">
                    <button type="submit" class="btn btn-primary">💾 Lưu</button>
                    <a asp-action="Index" class="btn btn-default">Huỷ</a>
                </div>
            </form>
        </div>
    </div>
</body>

