@model List<WebApplication1.Models.PhieuMuon>

@{
    ViewData["Title"] = "Trả sách";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* ===== Returns / PhieuTra extras ===== */
    .admin-alert {
        border-radius: 12px;
        margin-bottom: 12px;
    }

    .admin-status--unknown {
        background: rgba(0,0,0,.08);
        color: rgba(0,0,0,.65);
    }

    /* row hinting */
    .admin-table tr.is-overdue td {
        background: rgba(220,53,69,.06);
    }

    .admin-table tr.is-ontime td {
        background: transparent;
    }

</style>
<div class="admin-page">

    <!-- Toolbar -->
    <div class="admin-toolbar">
        <div class="admin-toolbar__left">
            <h2 class="admin-title">↩️ Trả sách</h2>
            <div class="admin-subtitle">Danh sách phiếu đang mượn — chọn phiếu để lập phiếu trả.</div>
        </div>
    </div>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success admin-alert">
            @TempData["ok"]
        </div>
    }

    <div class="admin-card">
        <div class="admin-card__body">
            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table">
                    <thead>
                        <tr>
                            <th style="width:90px;">Mã</th>
                            <th>Độc giả</th>
                            <th style="width:160px;">Ngày mượn</th>
                            <th style="width:160px;">Hạn trả</th>
                            <th style="width:120px;" class="text-center">Trạng thái</th>
                            <th style="width:170px;" class="text-right">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="admin-empty">
                                    Hiện không có phiếu nào đang mượn.
                                </td>
                            </tr>
                        }
                        else
                        {
                            var today = DateTime.Today;

                            foreach (var p in Model)
                            {
                                // Null-safe + overdue detect
                                var due = p.HanTra;
                                var isOverdue = (due != DateOnly.FromDayNumber(DateTime.Now.Day) && due.Day < today.Day);

                                <tr class="@(isOverdue ? "is-overdue" : "is-ontime")">
                                    <td class="admin-mono">#@p.PhieuMuonId</td>

                                    <td>
                                        <div class="admin-title-cell__name">
                                            @(p.DocGia?.HoTen ?? "—")
                                        </div>
                                    </td>

                                    <td class="admin-mono">
                                        @(p.NgayMuon == default(DateTime) ? "—" : p.NgayMuon.ToString("dd/MM/yyyy"))
                                    </td>

                                    <td class="admin-mono">
                                        @(p.HanTra == DateOnly.FromDayNumber(DateTime.Now.Day) ? "—" : p.HanTra.ToString("dd/MM/yyyy"))
                                    </td>

                                    <td class="text-center">
                                        @if (due == DateOnly.FromDayNumber(DateTime.Now.Day))
                                        {
                                            <span class="admin-status admin-status--unknown">CHƯA RÕ</span>
                                        }
                                        else if (isOverdue)
                                        {
                                            <span class="admin-status admin-status--unpaid">QUÁ HẠN</span>
                                        }
                                        else
                                        {
                                            <span class="admin-status admin-status--paid">CÒN HẠN</span>
                                        }
                                    </td>

                                    <td class="text-right">
                                        <a asp-action="ReturnForm" asp-route-id="@p.PhieuMuonId"
                                           class="btn btn-sm btn-primary admin-action-btn">
                                            Lập phiếu trả
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
