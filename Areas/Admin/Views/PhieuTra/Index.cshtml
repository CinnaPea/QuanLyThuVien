@model List<WebApplication1.Models.PhieuMuon>

@{
    ViewData["Title"] = "Trả sách";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-page {
        padding: 10px 0 30px;
    }

    .admin-toolbar {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 12px;
        margin: 8px 0 14px;
        flex-wrap: wrap;
    }

    .admin-title {
        margin: 0;
        font-size: 26px;
        font-weight: 800;
    }

    .admin-subtitle {
        margin-top: 6px;
        color: rgba(0,0,0,.55);
        font-size: 13px;
    }

    .admin-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        overflow: hidden;
    }

    .admin-table thead th {
        background: rgba(0,0,0,.03);
        border-bottom: 1px solid rgba(0,0,0,.08) !important;
        font-weight: 800;
        font-size: 12px;
        letter-spacing: .4px;
        text-transform: uppercase;
        padding: 14px 12px !important;
        white-space: nowrap;
    }

    .admin-table tbody td {
        padding: 14px 12px !important;
        vertical-align: middle !important;
    }

    .admin-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 12.5px;
    }

    .admin-pill {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(0,0,0,.06);
        font-size: 12px;
        font-weight: 700;
        line-height: 1;
    }

    .admin-pill--ok {
        background: rgba(25,135,84,.12);
    }

    .admin-pill--danger {
        background: rgba(220,53,69,.12);
    }

    .admin-action-btn {
        border-radius: 10px;
        padding: 7px 10px;
        font-weight: 800;
    }

    .admin-empty {
        text-align: center;
        padding: 28px 12px !important;
        color: rgba(0,0,0,.55);
        background: #fff;
    }

    .is-overdue td {
        background: rgba(220,53,69,.05);
    }
</style>
<div class="admin-page">
    <div class="admin-toolbar">
        <div>
            <h2 class="admin-title">↩️ Trả sách</h2>
            <div class="admin-subtitle">Danh sách phiếu đang mượn — chọn phiếu để lập phiếu trả tại quầy.</div>
        </div>
    </div>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover table-striped admin-table">
                <thead>
                    <tr>
                        <th style="width:90px;">Mã</th>
                        <th>Độc giả</th>
                        <th style="width:180px;">Ngày mượn</th>
                        <th style="width:140px;">Hạn trả</th>
                        <th style="width:120px;" class="text-center">Trạng thái</th>
                        <th style="width:170px;" class="text-right">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="admin-empty">Hiện không có phiếu nào đang mượn.</td>
                        </tr>
                    }
                    else
                    {
                        var today = DateOnly.FromDateTime(DateTime.Now);

                        foreach (var p in Model)
                        {
                            var overdue = (p.HanTra < today);
                            <tr class="@(overdue ? "is-overdue" : "")">
                                <td class="admin-mono">@p.PhieuMuonId</td>
                                <td>@(p.DocGia?.HoTen ?? $"#{p.DocGiaId}")</td>
                                <td class="admin-mono">@p.NgayMuon.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="admin-mono">@p.HanTra</td>
                                <td class="text-center">
                                    @if (overdue)
                                    {
                                        <span class="admin-pill admin-pill--danger">Quá hạn</span>
                                    }
                                    else
                                    {
                                        <span class="admin-pill admin-pill--ok">Đang mượn</span>
                                    }
                                </td>
                                <td class="text-right">
                                    <a asp-action="ReturnForm" asp-route-id="@p.PhieuMuonId"
                                       class="btn btn-sm btn-primary admin-action-btn">
                                        Lập phiếu trả
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

