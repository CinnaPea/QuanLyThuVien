@model WebApplication1.VMs.PhieuTraIndexVM

@{
    ViewData["Title"] = "Trả sách";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-page {
        padding: 10px 0 30px;
    }

    .admin-toolbar {
        display: flex;
        justify-content: space-between;
        margin: 8px 0 14px;
    }

    .admin-title {
        font-size: 26px;
        font-weight: 700;
    }

    .admin-subtitle {
        font-size: 13px;
        color: rgba(0,0,0,.55);
    }

    .admin-card {
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        border: 1px solid rgba(0,0,0,.08);
        overflow: hidden;
        margin-top: 16px;
    }

    .admin-table thead th {
        background: rgba(0,0,0,.03);
        font-size: 12px;
        font-weight: 700;
        text-transform: uppercase;
        padding: 14px 12px;
    }

    .admin-table tbody td {
        padding: 14px 12px;
        vertical-align: middle;
    }

    .admin-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
        font-size: 12.5px;
    }

    .admin-empty {
        text-align: center;
        padding: 28px;
        color: rgba(0,0,0,.55);
    }

    .pill {
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 700;
        display: inline-block;
    }

    .pill-ok {
        background: rgba(40,167,69,.2);
    }

    .pill-late {
        background: rgba(220,53,69,.2);
    }

    .pill-done {
        background: rgba(0,123,255,.18);
    }

    .admin-action-btn {
        border-radius: 10px;
        font-weight: 700;
        padding: 6px 10px;
    }
</style>

<div class="admin-page">

    <!-- ===== PHIẾU ĐANG MƯỢN ===== -->
    <div class="admin-toolbar">
        <div>
            <h2 class="admin-title">↩️ Trả sách</h2>
            <div class="admin-subtitle">
                Danh sách phiếu đang mượn — chọn để lập phiếu trả
            </div>
        </div>
    </div>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover admin-table">
                <thead>
                    <tr>
                        <th style="width:90px;">Mã</th>
                        <th>Độc giả</th>
                        <th style="width:150px;">Ngày mượn</th>
                        <th style="width:150px;">Hạn trả</th>
                        <th style="width:120px;">Trạng thái</th>
                        <th style="width:140px;" class="text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.DangMuon.Any())
                    {
                        <tr>
                            <td colspan="6" class="admin-empty">
                                Không có phiếu nào đang mượn
                            </td>
                        </tr>
                    }
                    else
                    {
                        var today = DateOnly.FromDateTime(DateTime.Now);

                        foreach (var p in Model.DangMuon)
                        {
                            var overdue = today > p.HanTra;

                            <tr>
                                <td class="admin-mono">#@p.PhieuMuonId</td>
                                <td>@p.DocGia?.HoTen</td>
                                <td class="admin-mono">@p.NgayMuon.ToString("dd/MM/yyyy")</td>
                                <td class="admin-mono">@p.HanTra.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="pill @(overdue ? "pill-late" : "pill-ok")">
                                        @(overdue ? "QUÁ HẠN" : "CÒN HẠN")
                                    </span>
                                </td>
                                <td class="text-right">
                                    <a asp-action="ReturnForm"
                                       asp-route-id="@p.PhieuMuonId"
                                       class="btn btn-sm btn-primary admin-action-btn">
                                        Lập phiếu trả
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- ===== LỊCH SỬ PHIẾU TRẢ ===== -->
    <h2 class="admin-title mt-5">📜 Lịch sử phiếu trả</h2>
    <div class="admin-subtitle">Danh sách các lần trả sách đã lập</div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover admin-table">
                <thead>
                    <tr>
                        <th style="width:90px;">Mã trả</th>
                        <th>Mã mượn</th>
                        <th>Độc giả</th>
                        <th style="width:160px;">Ngày trả</th>
                        <th style="width:130px;" class="text-right">Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.LichSuTra.Any())
                    {
                        <tr>
                            <td colspan="5" class="admin-empty">
                                Chưa có phiếu trả nào
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var pt in Model.LichSuTra)
                        {
                            <tr>
                                <td class="admin-mono">#@pt.PhieuTraId</td>
                                <td class="admin-mono">#@pt.PhieuMuonId</td>
                                <td>@pt.PhieuMuon?.DocGia?.HoTen</td>
                                <td class="admin-mono">
                                    @pt.NgayTra.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="text-right">
                                    <a asp-action="Details"
                                       asp-route-id="@pt.PhieuTraId"
                                       class="btn btn-sm btn-secondary admin-action-btn">
                                        Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>
