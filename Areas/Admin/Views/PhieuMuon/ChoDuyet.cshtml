@model PhieuMuonChoDuyetVM

@{
    ViewData["Title"] = "Phiếu mượn chờ duyệt";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-page { padding: 10px 0 30px; }

    .admin-toolbar {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 12px;
        margin: 8px 0 14px;
        flex-wrap: wrap;
    }

    .admin-title {
        margin: 0;
        font-size: 26px;
        font-weight: 700;
    }

    .admin-subtitle {
        margin-top: 6px;
        color: rgba(0,0,0,.55);
        font-size: 13px;
    }

    .admin-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        overflow: hidden;
        margin-top: 14px;
    }

    .admin-table thead th {
        background: rgba(0,0,0,.03);
        font-weight: 700;
        font-size: 12px;
        padding: 14px 12px;
        text-transform: uppercase;
    }

    .admin-table tbody td {
        padding: 14px 12px;
        vertical-align: middle;
    }

    .admin-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
        font-size: 12.5px;
    }

    .admin-empty {
        text-align: center;
        padding: 26px;
        color: rgba(0,0,0,.55);
    }

    .admin-pill {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 700;
        background: rgba(0,0,0,.08);
    }

    .pill-wait { background: rgba(255,193,7,.25); }
    .pill-done { background: rgba(40,167,69,.25); }
    .pill-reject { background: rgba(220,53,69,.25); }

    .admin-action-btn {
        border-radius: 10px;
        padding: 6px 10px;
        font-weight: 700;
    }
</style>

<div class="admin-page">

    <!-- TIÊU ĐỀ -->
    <div class="admin-toolbar">
        <div>
            <h2 class="admin-title">🕒 Phiếu mượn chờ duyệt</h2>
            <div class="admin-subtitle">
                Duyệt phiếu mượn trước khi giao sách cho độc giả
            </div>
        </div>
    </div>

    <!-- THÔNG BÁO -->
    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }
    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }

    <!-- ===== PHIẾU CHỜ DUYỆT ===== -->
    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover admin-table">
                <thead>
                    <tr>
                        <th style="width:90px;">Mã</th>
                        <th>Độc giả</th>
                        <th style="width:160px;">Ngày mượn</th>
                        <th style="width:150px;">Trạng thái</th>
                        <th style="width:130px;" class="text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.ChoDuyet.Any())
                    {
                        <tr>
                            <td colspan="5" class="admin-empty">
                                Không có phiếu mượn chờ duyệt
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model.ChoDuyet)
                        {
                            <tr>
                                <td class="admin-mono">#@p.PhieuMuonId</td>
                                <td>@p.DocGia?.HoTen</td>
                                <td class="admin-mono">
                                    @p.NgayMuon.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <span class="admin-pill pill-wait">
                                        @p.TrangThai
                                    </span>
                                </td>
                                <td class="text-right">
                                    <a asp-action="Details"
                                       asp-route-id="@p.PhieuMuonId"
                                       class="btn btn-sm btn-info admin-action-btn">
                                        Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- ===== LỊCH SỬ PHIẾU MƯỢN ===== -->
    <hr style="margin:32px 0;" />

    <h2 class="admin-title">📚 Lịch sử phiếu mượn</h2>
    <div class="admin-subtitle">
        Các phiếu đã trả hoặc bị từ chối gần đây
    </div>

    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover admin-table">
                <thead>
                    <tr>
                        <th style="width:90px;">Mã</th>
                        <th>Độc giả</th>
                        <th style="width:160px;">Ngày mượn</th>
                        <th style="width:150px;">Trạng thái</th>
                        <th style="width:130px;" class="text-right">Xem</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.LichSu.Any())
                    {
                        <tr>
                            <td colspan="5" class="admin-empty">
                                Chưa có lịch sử phiếu mượn
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var p in Model.LichSu)
                        {
                            var pill = p.TrangThai == "DaTra"
                                ? "pill-done"
                                : "pill-reject";

                            <tr>
                                <td class="admin-mono">#@p.PhieuMuonId</td>
                                <td>@p.DocGia?.HoTen</td>
                                <td class="admin-mono">
                                    @p.NgayMuon.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <span class="admin-pill @pill">
                                        @p.TrangThai
                                    </span>
                                </td>
                                <td class="text-right">
                                    <a asp-action="Details1"
                                       asp-route-id="@p.PhieuMuonId"
                                       class="btn btn-sm btn-secondary admin-action-btn">
                                        Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
