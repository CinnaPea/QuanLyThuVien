@model List<WebApplication1.Models.Phat>

@{
    ViewData["Title"] = "Phạt";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    /* =========================
           Admin CRUD Page (DauSach)
           ========================= */
    .admin-page {
        padding: 10px 0 30px;
    }

    .admin-toolbar {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        gap: 12px;
        margin: 8px 0 14px;
        flex-wrap: wrap;
    }

    .admin-title {
        margin: 0;
        font-size: 26px;
        font-weight: 700;
        letter-spacing: .2px;
    }

    .admin-subtitle {
        margin-top: 6px;
        color: rgba(0,0,0,.55);
        font-size: 13px;
    }

    .admin-btn {
        border-radius: 10px;
        padding: 10px 14px;
        font-weight: 600;
    }

    .admin-btn__icon {
        display: inline-block;
        margin-right: 6px;
        font-weight: 900;
        transform: translateY(-1px);
    }

    .admin-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        overflow: hidden;
    }

    .admin-card__body {
        padding: 0;
    }

    .admin-table {
        margin: 0;
    }

        .admin-table thead th {
            background: rgba(0,0,0,.03);
            border-bottom: 1px solid rgba(0,0,0,.08) !important;
            font-weight: 700;
            font-size: 12px;
            letter-spacing: .4px;
            text-transform: uppercase;
            padding: 14px 12px !important;
            white-space: nowrap;
        }

        .admin-table tbody td {
            padding: 14px 12px !important;
            vertical-align: middle !important;
        }

    .admin-title-cell__name {
        font-weight: 700;
        line-height: 1.25;
    }

    .admin-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 12.5px;
    }

    .admin-muted {
        color: rgba(0,0,0,.45);
    }

    .admin-pill {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        background: rgba(0,0,0,.06);
        font-size: 12px;
        font-weight: 600;
        line-height: 1;
    }

    .admin-pill--soft {
        background: rgba(255,195,0,.18); /* “corporate gold” */
    }

    .admin-pill--isbn {
        background: rgba(0,0,0,.08);
    }

    .admin-action-btn {
        border-radius: 10px;
        padding: 7px 10px;
        font-weight: 700;
    }

    .admin-inline-form {
        display: inline-block;
        margin: 0 0 0 6px;
    }

    .admin-empty {
        text-align: center;
        padding: 28px 12px !important;
        color: rgba(0,0,0,.55);
        background: #fff;
    }
    /* ===== Fines / Phat extras ===== */
    .admin-money {
        font-weight: 800;
        letter-spacing: .2px;
    }

    .admin-reason {
        font-weight: 600;
        line-height: 1.25;
    }

    .admin-status {
        display: inline-block;
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 800;
        letter-spacing: .4px;
    }

    .admin-status--paid {
        background: rgba(28,200,138,.18);
        color: #0f5132;
    }

    .admin-status--unpaid {
        background: rgba(220,53,69,.14);
        color: #842029;
    }

    /* row hinting */
    .admin-table tr.is-paid td {
        opacity: .92;
    }

    .admin-table tr.is-unpaid td {
        opacity: 1;
    }

</style>
<div class="admin-page">

    <!-- Toolbar -->
    <div class="admin-toolbar">
        <div class="admin-toolbar__left">
            <h2 class="admin-title">💰 Danh sách phạt</h2>
            <div class="admin-subtitle">Theo dõi phí phạt, trạng thái thanh toán, và tra cứu chi tiết.</div>
        </div>

        <div class="admin-toolbar__right">
            <!-- Optional: add create/search later -->
            @* <a asp-action="Create" class="btn btn-primary admin-btn">＋ Tạo phiếu phạt</a> *@
        </div>
    </div>

    <div class="admin-card">
        <div class="admin-card__body">
            <div class="table-responsive">
                <table class="table table-hover table-striped admin-table">
                    <thead>
                        <tr>
                            <th style="width:80px;">Mã</th>
                            <th style="width:110px;">Phiếu mượn</th>
                            <th style="width:90px;">Sách</th>
                            <th>Lý do</th>
                            <th style="width:160px;" class="text-right">Số tiền</th>
                            <th style="width:110px;" class="text-center">Đã TT</th>
                            <th style="width:120px;" class="text-right">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="admin-empty">
                                    Chưa có dữ liệu phạt trong hệ thống.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var p in Model)
                            {
                                var paid = p.DaThanhToan == true;

                                <tr class="@(paid ? "is-paid" : "is-unpaid")">
                                    <td class="admin-mono">#@p.PhatId</td>

                                    <td class="admin-mono">
                                        <span class="admin-pill admin-pill--soft">@p.PhieuMuonId</span>
                                    </td>

                                    <td class="admin-mono">
                                        <span class="admin-pill">@p.SachId</span>
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(p.LyDo))
                                        {
                                            <div class="admin-reason">@p.LyDo</div>
                                        }
                                        else
                                        {
                                            <span class="admin-muted">—</span>
                                        }
                                    </td>

                                    <td class="text-right">
                                        <span class="admin-money">
                                            @(((decimal?)(p.SoTien) ?? 0m).ToString("N0")) ₫
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        @if (paid)
                                        {
                                            <span class="admin-status admin-status--paid">ĐÃ TT</span>
                                        }
                                        else
                                        {
                                            <span class="admin-status admin-status--unpaid">CHƯA TT</span>
                                        }
                                    </td>

                                    <td class="text-right">
                                        <a asp-action="Details" asp-route-id="@p.PhatId"
                                           class="btn btn-sm btn-info admin-action-btn">
                                            Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
