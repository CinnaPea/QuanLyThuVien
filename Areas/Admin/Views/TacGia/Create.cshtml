@model WebApplication1.Models.TacGium

@{
    ViewData["Title"] = "Thêm tác giả";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/CRUD.css" />
</head>
<body>
    <div class="admin-page">
        <div class="admin-page-head">
            <div>
                <h2 class="admin-title">✍️ Thêm tác giả</h2>
                <p class="admin-sub">Tạo mới tác giả để gắn với đầu sách.</p>
            </div>

            <div class="admin-actions">
                <a asp-action="Index" class="btn btn-default">← Quay lại</a>
            </div>
        </div>

        <div class="admin-card admin-form-card">
            <form method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger admin-valsum"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group admin-fg">
                            <label class="control-label">Tên tác giả</label>
                            <input asp-for="TenTacGia" class="form-control" placeholder="VD: Nguyễn Nhật Ánh" />
                            <span asp-validation-for="TenTacGia" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="admin-form-actions">
                    <button type="submit" class="btn btn-primary">💾 Lưu</button>
                    <a asp-action="Index" class="btn btn-default">Huỷ</a>
                </div>
            </form>
        </div>
    </div>
</body>
