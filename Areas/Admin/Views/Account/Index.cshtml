@model List<WebApplication1.VMs.AccountListItemVM>
@using WebApplication1.Models

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

    var roles = ViewBag.VaiTros as List<VaiTro> ?? new();
    string q = ViewBag.Q as string ?? "";
    int? selectedRole = ViewBag.SelectedVaiTroId as int?;
    bool? trangThai = ViewBag.TrangThai as bool?;
}
<link rel="stylesheet" href="~/css/CRUD.css"/>
<link rel="stylesheet" href="~/css/admin-index.css"/>

<div class="container-fluid admin-page">

    <!-- Header / Toolbar -->
    <div class="admin-toolbar">
        <div>
            <h3 class="admin-title mb-0">Quản lý người dùng</h3>
            <div class="admin-subtitle">Tài khoản • Vai trò • Trạng thái</div>
        </div>

        <a class="btn btn-success admin-btn"
           asp-area="Admin" asp-controller="Account" asp-action="Create">
            <span class="admin-btn__icon">+</span> Tạo tài khoản
        </a>
    </div>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }

    <!-- Filters -->
    <div class="admin-card mb-3">
        <div class="admin-card__body p-3">
            <form method="get" class="admin-filter-grid">
                <div class="admin-filter-field">
                    <label class="form-label mb-1">Tìm kiếm</label>
                    <input class="form-control" name="q" value="@q" placeholder="username / họ tên / email..." />
                </div>

                <div class="admin-filter-field">
                    <label class="form-label mb-1">Vai trò</label>
                    <select class="form-select" name="vaiTroId">
                        <option value="">-- Tất cả --</option>
                        @foreach (var r in roles)
                        {
                            <option value="@r.VaiTroId" selected="@(selectedRole == r.VaiTroId)">
                                @r.TenVaiTro
                            </option>
                        }
                    </select>
                </div>

                <div class="admin-filter-field">
                    <label class="form-label mb-1">Trạng thái</label>
                    <select class="form-select" name="trangThai">
                        <option value="">-- Tất cả --</option>
                        <option value="true" selected="@(trangThai == true)">Đang hoạt động</option>
                        <option value="false" selected="@(trangThai == false)">Bị khóa</option>
                    </select>
                </div>

                <div class="admin-filter-actions">
                    <button class="btn btn-primary admin-action-btn" type="submit">Lọc</button>
                    <a class="btn btn-outline-secondary admin-action-btn"
                       asp-area="Admin" asp-controller="Account" asp-action="Index">
                        Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="admin-card">
        <div class="admin-card__body">
            <div class="table-responsive">
                <table class="table admin-table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width:70px">#</th>
                            <th>User</th>
                            <th>Độc giả</th>
                            <th style="width:140px">Vai trò</th>
                            <th style="width:140px">Trạng thái</th>
                            <th class="text-right" style="width:260px">Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="admin-empty">
                                    Chưa có dữ liệu.
                                </td>
                            </tr>
                        }
                        else
                        {
                            var i = 0;
                            foreach (var x in Model)
                            {
                                i++;

                                var statusClass = x.TrangThai ? "admin-chip admin-chip--ok" : "admin-chip admin-chip--bad";
                                var statusText = x.TrangThai ? "Active" : "Locked";

                                <tr>
                                    <td class="admin-muted">@i</td>

                                    <td>
                                        <div class="admin-title-cell__name">@x.TenDangNhap</div>
                                        <div class="admin-muted small">
                                            <span class="admin-mono">TK#@x.TaiKhoanId</span>
                                            <span class="admin-muted">•</span>
                                            <span class="admin-mono">DG#@x.DocGiaId</span>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="admin-title-cell__name">@x.HoTen</div>
                                        <div class="admin-muted small">
                                            @(string.IsNullOrWhiteSpace(x.Email) ? "-" : x.Email)
                                            <span class="admin-muted">•</span>
                                            @(string.IsNullOrWhiteSpace(x.DienThoai) ? "-" : x.DienThoai)
                                        </div>
                                    </td>

                                    <td>
                                        <span class="admin-pill admin-pill--soft">@x.VaiTro</span>
                                    </td>

                                    <td>
                                        <span class="@statusClass">@statusText</span>
                                    </td>

                                    <td class="text-right">
                                        <a class="btn btn-outline-info admin-action-btn"
                                           asp-area="Admin" asp-controller="Account" asp-action="Details" asp-route-id="@x.TaiKhoanId">
                                            Details
                                        </a>

                                        <a class="btn btn-outline-warning admin-action-btn"
                                           asp-area="Admin" asp-controller="Account" asp-action="Edit" asp-route-id="@x.TaiKhoanId">
                                            Edit
                                        </a>

                                        <form class="admin-inline-form" method="post"
                                              asp-area="Admin" asp-controller="Account" asp-action="Toggle" asp-route-id="@x.TaiKhoanId"
                                              onsubmit="return confirm('Đổi trạng thái tài khoản này?');">
                                            @Html.AntiForgeryToken()
                                            <button class="btn btn-outline-dark admin-action-btn" type="submit">
                                                Toggle
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>
